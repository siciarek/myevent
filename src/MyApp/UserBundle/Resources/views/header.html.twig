<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{{ name }}
        :: {% if title is defined %}{{ title | trans() }}{% else %}{{ description | trans() }}{% endif %}</title>
    <link rel="icon" sizes="16x16" href="{{ asset("favicon.ico") }}"/>

    {% stylesheets
    '@MyAppUserBundle/Resources/public/css/reset.css'
    '@MyAppUserBundle/Resources/public/css/icons.css'
    '@MyAppUserBundle/Resources/public/css/main.css'
    '@MyAppUserBundle/Resources/public/css/menu.css'
    '@MyAppUserBundle/Resources/public/css/signin-form.css'
    '@MyAppUserBundle/Resources/public/css/tinymce.css'
    output="css/myapp.css" %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {% javascripts
    '@MyAppUserBundle/Resources/public/js/jquery-1.8.3.min.js'
    '@MyAppUserBundle/Resources/public/js/translations.js'
    output="css/myapp.js" %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% block jsinclude %}{% endblock %}

</head>
<body>

{% include 'MyAppUserBundle::menu.html.twig' %}

<div id="page-wrapper">

{% for flashMessage in app.session.flashbag.get("notice") %}
<div class="flash-message">
<em>Notice</em>: {{ flashMessage }}
</div>
{% endfor %}

<div id="page-content">
